@import vars
@import basic

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

.counties
  margin: 0 3px
  width: 40%
  display: inline-block
  input
  .input-group-addon
    padding: 2px 5px
    font-size: 13px
  input
    height: 24px

#svg
  width: 50%
  height: 600px
  position: absolute
  top: 0
  left: 0

#config
  position: absolute
  top: 0
  left: 50%
  height: 100%
  width: 50%

#toggler
  position: absolute
  top: 5px
  left: 5px
  z-index: 10
#config
  background: #fff

@media (max-width: 640px)
  #svg
    width: 100%
    height: 100%
  #config
    top: 25px
    left: 0
    width: 100%
    height: 100%
    text-align: center
